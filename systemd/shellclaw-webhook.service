[Unit]
Description=ShellClaw Webhook Server
After=network-online.target
Wants=network-online.target

[Service]
Type=simple
WorkingDirectory=%h/shellclaw
EnvironmentFile=%h/shellclaw/.env
ExecStart=/usr/bin/python3 %h/shellclaw/services/webhook_server.py
Restart=always
RestartSec=3

[Install]
WantedBy=default.target
